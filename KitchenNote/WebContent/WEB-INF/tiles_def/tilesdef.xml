<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- view이름과 definition 이름과 동일하게 작성/실행 -->
	<definition name="base_layout" preparer="menuPreparer"
		template="/WEB-INF/viewtiles/template/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/viewtiles/template/header.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/viewtiles/template/footer.jsp" />
	</definition>

	<definition name="registMemberForm" extends="base_layout">
		<put-attribute name="title" value="멤버폼" />
		<put-attribute name="body"
			value="/WEB-INF/view/jsp/member/regist/registMemberForm.jsp" />
	</definition>
	<definition name="registMember" extends="base_layout">
		<put-attribute name="title" value="가입 성공" />
		<put-attribute name="body"
			value="/WEB-INF/view/jsp/member/regist/registMember.jsp" />
	</definition>
	<definition name="loginForm" extends="base_layout">
		<put-attribute name="title" value="로그인폼" />
		<put-attribute name="body"
			value="/WEB-INF/view/jsp/login/loginForm.jsp" />
	</definition>

	<definition name="loginSuccess" extends="base_layout">
		<put-attribute name="title" value="로그인 성공" />
		<put-attribute name="body"
			value="/WEB-INF/view/jsp/login/loginSuccess.jsp" />
	</definition>

</tiles-definitions>